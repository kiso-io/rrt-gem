<% @title = "Sign up" %>

<h1><%= app_name %></h1>

<%= form_for resource, :as => resource_name, :url => registration_path(resource_name),
                       :html => { :class => "form-horizontal col-xs-12 col-md-6 col-md-offset-3", :novalidate => true } do |f| %>
  <%= f.error_notification %>

  <div class="sheet form-sheet">
    <div class="sheet-inner">
      <%= f.form_group :email do |f| %>
        <%= f.label :email, :class => "form-label" %>
        <%= f.email_field :email, :autofocus => true, :class => "col-md-3" %>
        <%= f.error_messages %>
      <% end %>

      <%= f.form_group :password do |f| %>
        <%= f.label :password, :class => "form-label" %>
        <%= f.password_field :password, :class => "col-md-3" %>
        <%= f.error_messages %>
      <% end %>

      <%= f.form_group :password_confirmation do |f| %>
        <%= f.label :password_confirmation, :class => "form-label" %>
        <%= f.password_field :password_confirmation, :class => "col-md-3" %>
        <%= f.error_messages %>
      <% end %>
    </div>
  </div>

  <div class="form-actions text-right">
    <%= f.submit "Sign up", :class => 'btn btn-primary' %> or
    <%= link_to "Log in", new_session_path(resource_name), :class => '' %>
  </div>
<% end %>
