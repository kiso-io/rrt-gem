<header>
  <div class="row no-gutters">
    <div class="col">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark my-0">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

          <ul class="navbar-nav mr-auto theme-list mr-auto">
            <% @themes.each do |theme| %>
            <li data-theme='<%=theme[:theme]%>' >
              <a href="#" class="UpdateIframe" data-theme='<%=theme[:theme]%>' data-color='<%=theme[:colors][0] %>' ><%= theme[:theme] %></a>
              <ul class='style-list list-unstyled list-inline'>
                <% theme[:colors].each do |color| %>
                <li data-theme='<%=theme[:theme]%>' data-color="<%= color %>">
                  <a href="#" class="UpdateIframe" data-theme='<%=theme[:theme]%>' data-color="<%= color %>"><%= color %></a>
                </li>
                <% end %>
              </ul>
            </li>
            <% end %>
          </ul>

          <ul class="list-unstyled my-2 my-lg-0">
            <li>
              <div class="btn-group">
                <a data-toggle="tooltip" class="btn btn-neutral size-mobile" data-original-title="Mobile"><i class="fa fa-mobile-phone"></i></a>
                <a data-toggle="tooltip" class="btn btn-neutral size-tablet" data-original-title="Tablet"><i class="fa fa-tablet"></i></a>
                <a data-toggle="tooltip" class="btn btn-neutral size-laptop" data-original-title="Laptop"><i class="fa fa-laptop"></i></a>
              </div>
            </li>
          </ul>
        </div>
      </nav>

    </div>
  </div>
</header>

<div id="sg-gen-container" class="vp-animate">
  <iframe id="sg-viewport" sandbox="allow-same-origin allow-scripts" class="vp-animate" src='preview/main'></iframe>
</div>

<% content_for :styles do %>
  <%= stylesheet_link_tag "preview", :media => "all" %>
<% end %>
