<div class="page-header bg-white mb-3">
  <h2 class="m-0">New Staff</h2>
</div>
<div class="row">
  <div id="content" class="col-md-9">
    <div class="card card-sheet">
      <div class="card-body">
        <form accept-charset="UTF-8" action="#" class="form-horizontal" id="new_contact" method="post">

          <div class="form-group row string required contact_name">
            <label class="string required col-sm-3 form-label" for="contact_name">Name</label>
            <div class="col-sm-9">
              <input aria-required="true" class="string required form-control" id="contact_name" name="contact[name]" required="required" type="text">
              <div class="help-block">
                <i class="fa fa-asterisk"></i> required</div>
            </div>
          </div>
          <div class="form-group row text optional contact_notes">
            <label class="text optional col-sm-3 form-label" for="contact_notes">Notes</label>
            <div class="col-sm-9">
              <textarea class="text optional form-control" cols="10" id="contact_notes" name="contact[notes]" rows="5"></textarea>
            </div>
          </div>

          <div class="d-flex">
            <div class="ml-auto">
              <a class="btn btn-outline-default" href="#">Cancel</a>
              <input class="btn btn-primary" name="commit" type="submit" value="Create Contact">
            </div>
          </div>

        </form>
      </div>
    </div>

  </div> <!-- /#content -->

  <div id="sidebar" class="col-md-3">
    <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
