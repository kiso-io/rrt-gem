<% headers = Dir.entries(File.join(File.dirname(__FILE__), '_content_block_app_navs')).select { |f| !File.directory?(f)}.sort_by { |s| s.scan(/\d+/).first.to_i } %>

<div class="container-fluid">
  <% headers.each_with_index do |header, index| %>
    <div class="row">
      <div class="col-12">
        <div class="card overflow-visible">
          <div class="card-header">
            <h6>
              APP NAV <%= index+1 %>
            </h6>
          </div>
          <div class="card-body">
            <%= render partial: "preview/elements/006_content_blocks@ti-view-list/_content_block_app_navs/#{header.gsub(/_/, '')}" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
