<div class="row">
    <% colors = [ 'red',
                  'pink',
                  'purple',
                  'deep-purple',
                  'indigo',
                  'blue',
                  'light-blue',
                  'cyan',
                  'teal',
                  'green',
                  'light-green',
                  'lime',
                  'yellow',
                  'amber',
                  'orange',
                  'deep-orange',
                  'brown',
                  'grey',
                  'blue-grey'
    ]
    %>
    <% colors.each do |color| %>
      <div class="col-sm-4">
        <% 5.downto(1).each do |value| %>
          <div class="swatch <%= color %>-lighten-<%= value %>">
            <p class='swatch-classname pull-left ml10'>.<%= color %>-lighten-<%= value %></p>
            <p class='swatch-hexvalue pull-right mr10'></p>
          </div>
        <% end %>
        <div class='swatch <%= color %>'>
          <p class='swatch-classname pull-left ml10'>.<%= color %></p>
          <p class='swatch-hexvalue pull-right mr10'></p>
        </div>
        <% (1..4).each do |value| %>
          <div class="swatch <%= color %>-darken-<%= value %>">
            <p class='swatch-classname pull-left ml10'>.<%= color %>-darken-<%= value %></p>
            <p class='swatch-hexvalue pull-right mr10'></p>
          </div>
        <% end %>
        <% if !['grey', 'blue-grey', 'brown'].include?(color) %>
          <% (1..4).each do |value| %>
            <div class="swatch <%= color %>-accent-<%= value %>">
              <p class='swatch-classname pull-left ml10'>.<%= color %>-accent-<%= value %></p>
              <p class='swatch-hexvalue pull-right mr10'></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
</div>