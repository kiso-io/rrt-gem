<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Contextual Colors</h3>
  </div>
  <div class="panel-body">
    <ul class="list-inline">
      <li class="text-muted">.text-muted</li>
      <li class="text-primary">.text-primary</li>
      <li class="text-warning">.text-warning</li>
      <li class="text-danger">.text-danger</li>
      <li class="text-success">.text-success</li>
      <li class="text-info">.text-info</li>
    </ul>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Contextual Backgrounds</h3>
  </div>
  <div class="panel-body">
    <p class="bg-primary p5">.bg-primary</p>
    <p class="bg-success p5">.bg-success</p>
    <p class="bg-info p5">.bg-info</p>
    <p class="bg-warning p5">.bg-warning</p>
    <p class="bg-danger p5">.bg-danger</p>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Color Palette</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <% colors = [ 'red',
        'pink',
        'purple',
        'deep-purple',
        'indigo',
        'blue',
        'light-blue',
        'cyan',
        'teal',
        'green',
        'light-green',
        'lime',
        'yellow',
        'amber',
        'orange',
        'deep-orange',
        'brown',
        'grey',
        'blue-grey'
      ]
      %>
      <% colors.each do |color| %>
      <div class="col-sm-4">
        <div class="swatch <%= color %>-50">
          <p class='swatch-classname pull-left ml10'>.<%= color %>-50</p>
          <p class='swatch-hexvalue pull-right mr10'></p>
        </div>
        <% (100..900).step(100).each do |value| %>
        <div class="swatch <%= color %>-<%= value %>">
          <p class='swatch-classname pull-left ml10'>.<%= color %>-<%= value %></p>
          <p class='swatch-hexvalue pull-right mr10'></p>
        </div>
        <% end %>
        <% if !['grey', 'blue-grey', 'brown'].include?(color) %>
        <% [100,200,400,700].each do |value| %>
        <div class="swatch <%= color %>-a<%= value %>">
          <p class='swatch-classname pull-left ml10'>.<%= color %>-a<%= value %></p>
          <p class='swatch-hexvalue pull-right mr10'></p>
        </div>
        <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>