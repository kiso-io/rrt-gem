<div id="main" class='devise signup'>
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1>My App</h1>
        <p class="p0 m0">Sign Up</p>
      </header>
    </div>
    <div class="row mt20">
      <form accept-charset="UTF-8" action="/users" class="form-horizontal col-xs-12 col-md-6 col-md-offset-3" id="new_user" method="post" novalidate="novalidate">
        <div class="sheet form-sheet">
          <div class="sheet-inner">
            <div class="form-group ">
              <label class="form-label" for="user_email">Email</label>
              <input autofocus="autofocus" class="" id="user_email" name="user[email]" type="email" value="">
            </div>
            <div class="form-group ">
              <label class="form-label" for="user_password">Password</label>
              <input class="" id="user_password" name="user[password]" type="password">
            </div>
            <div class="form-group ">
              <label class="form-label" for="user_password_confirmation">Password confirmation</label>
              <input class="" id="user_password_confirmation" name="user[password_confirmation]" type="password">
            </div>
          </div>
        </div>
        <div class="form-actions text-right mr15">
          <input class="btn btn-primary" name="commit" type="submit" value="Sign up">
        </div>
      </form>
    </div>
    <div class="row mt20">
      <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 text-right">
        <ul class="list-unstyled options">
          <li class="col-xs-12"><a href="/users/sign_in">Log in</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
