<div id="main" class='devise'>
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1>My App</h1>
        <p class="p0 m0">Login</p>
      </header>
    </div>
    <div class="row mt20">
      <form accept-charset="UTF-8" action="/users/sign_in" class="form-horizontal col-xs-12 col-md-6 col-md-offset-3" id="new_user" method="post">
        <div class="sheet form-sheet">
          <div class="sheet-inner">
            <div class="form-group ">
              <label class="form-label" for="user_email">Email</label>
              <input autofocus="autofocus" class="" id="user_email" name="user[email]" type="email" value="">
            </div>
            <div class="form-group ">
              <label class="form-label" for="user_password">Password</label>
              <input id="user_password" name="user[password]" type="password">
            </div>
          </div>
        </div>

        <div class="form-sheet-footer">
          <label class="checkbox col-sm-6" for="user_remember_me">
            <input name="user[remember_me]" type="hidden" value="0"><input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1"> Remember me
          </label>
          <input class="btn btn-primary pull-right mr20" name="commit" type="submit" value="Log in">
        </div>
      </form>
    </div>
    <div class="row mt20">
      <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 text-right">
        <ul class="list-unstyled options">
          <li class="col-xs-12 col-md-6"><a href="/users/sign_up">Sign up</a></li>
          <li class="col-xs-12 col-md-6"><a href="/users/password/new">Forgot your password?</a></li>
          <li class="col-xs-12 col-md-6"><a href="/users/confirmation/new">Didn't receive confirmation instructions?</a></li>
          <li class="col-xs-12 col-md-6"><a href="/users/unlock/new">Didn't receive unlock instructions?</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>