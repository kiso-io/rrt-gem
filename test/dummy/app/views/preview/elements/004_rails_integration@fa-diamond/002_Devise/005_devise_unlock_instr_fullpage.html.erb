<div id="main" class='devise login'>
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1>My App</h1>
        <p class="p0 m0">Unlock My Account</p>
      </header>
    </div>
    <div class="row mt20">
      <form accept-charset="UTF-8" action="/users/unlock" class="form-horizontal col-xs-12 col-md-6 col-md-offset-3" id="new_user" method="post">
        <div class="sheet form-sheet form-inputs">
          <div class="sheet-inner">
            <div class="form-group ">
              <label class="form-label" for="user_email">Email</label>
              <input autofocus="autofocus" class="" id="user_email" name="user[email]" type="email" value="">
            </div>
          </div>
        </div>
        <div class="form-actions text-right">
          <input class="btn btn-primary mr15" name="commit" type="submit" value="Unlock My Account">
        </div>
      </form>
    </div>
    <div class="row mt50">
      <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 text-right">
        <ul class="list-unstyled options">
          <li class="col-xs-12"><a href="/users/sign_in">Sign in</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>